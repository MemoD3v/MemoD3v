            <p>Have a project in mind or want to discuss potential collaborations?</p>
            <p>I'm always up for a creative challenge (and the occasional meme exchange).</p>
            
            <a href="https://discord.com/users/yourdiscordid" class="btn" target="_blank">
                <i class="fab fa-discord"></i> memorysilver
            </a>
            
            <p class="humor" style="margin-top: 3rem;">Disclaimer: I respond faster than most APIs, but slightly slower than a cached response.</p>
        </div>
    </section>
    
    <footer>
        <div class="container">
            <div class="social-links">
                <a href="#" target="_blank" title="GitHub"><i class="fab fa-github"></i></a>
                <a href="https://memo-dev.itch.io" target="_blank" title="itch.io"><i class="fas fa-gamepad"></i></a>
            </div>
            <p>&copy; 2023 MemoDev. All creativity reserved. No developers were harmed in the making of this portfolio.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.getElementById('suggestionText');
            const submitBtn = document.getElementById('submitBtn');
            const binLid = document.getElementById('binLid');
            const trashContainer = document.getElementById('trashContainer');
            const feedbackMessage = document.getElementById('feedbackMessage');
            const characterCount = document.getElementById('characterCount');

            // Character count feedback
            textarea.addEventListener('input', function() {
                const count = textarea.value.length;
                characterCount.textContent = `${count}/500`;
                if (count > 400) {
                    characterCount.className = 'character-count warning';
                } else if (count >= 500) {
                    characterCount.className = 'character-count error';
                } else {
                    characterCount.className = 'character-count';
                }
            });

            submitBtn.addEventListener('click', function() {
                const text = textarea.value.trim();
                if (!text) {
                    showFeedback('Please enter your suggestion before submitting.', 'error');
                    textarea.focus();
                    return;
                }
                if (text.length > 500) {
                    showFeedback('Please keep suggestions under 500 characters.', 'error');
                    return;
                }
                submitBtn.disabled = true;
                showTrashBin();
                dissolveText(text);
                textarea.value = '';
                characterCount.textContent = '0/500';
                characterCount.className = 'character-count';
            });

            function showTrashBin() {
                trashContainer.classList.add('visible');
            }

            function showFeedback(message, type) {
                feedbackMessage.textContent = message;
                feedbackMessage.className = `feedback-message ${type} visible`;
                setTimeout(() => {
                    feedbackMessage.classList.remove('visible');
                }, 3000);
            }

            function dissolveText(text) {
                // Open the trash bin lid
                binLid.classList.add('bin-lid-open');

                // Create particles for each character
                const textLength = text.length;
                let particlesCompleted = 0;

                for (let i = 0; i < textLength; i++) {
                    setTimeout(() => {
                        const particle = document.createElement('div');
                        particle.className = 'particle';
                        particle.textContent = text[i];
                        particle.style.fontSize = `${14 + Math.random() * 6}px`;

                        // Random color variation
                        const hue = 300 + Math.random() * 60; // Magenta/pink hues
                        particle.style.color = `hsl(${hue}, 70%, 70%)`;

                        // Position at random location in textarea
                        const textareaRect = textarea.getBoundingClientRect();
                        const x = textareaRect.left + Math.random() * textareaRect.width;
                        const y = textareaRect.top + Math.random() * textareaRect.height;
                        particle.style.left = x + 'px';
                        particle.style.top = y + 'px';
                        document.body.appendChild(particle);

                        // Animate to trash bin
                        const binRect = binLid.getBoundingClientRect();
                        const targetX = binRect.left + binRect.width/2;
                        const targetY = binRect.top + binRect.height/2;
                        const duration = 600 + Math.random() * 600;
                        const startTime = Date.now();

                        function animate() {
                            const elapsed = Date.now() - startTime;
                            const progress = Math.min(elapsed / duration, 1);

                            // Arc motion with slight variation
                            const arcHeight = 80 + Math.random() * 60;
                            const arcVariation = Math.sin(progress * Math.PI * 2) * 30;
                            const newX = x + (targetX - x) * progress + arcVariation;
                            const newY = y + (targetY - y) * progress - arcHeight * Math.sin(progress * Math.PI);

                            particle.style.left = newX + 'px';
                            particle.style.top = newY + 'px';

                            // Rotation effect
                            particle.style.transform = `translate(-50%, -50%) rotate(${progress * 720}deg) scale(${1.2 - progress * 0.7})`;

                            // Fade out
                            particle.style.opacity = 1 - progress * 0.9;

                            if (progress < 1) {
                                requestAnimationFrame(animate);
                            } else {
                                particle.remove();
                                particlesCompleted++;

                                // When all particles are done
                                if (particlesCompleted === textLength) {
                                    completeAnimation();
                                }
                            }
                        }

                        requestAnimationFrame(animate);
                    }, i * 30); // Stagger the particles
                }

                function completeAnimation() {
                    showFeedback('Thank you for your suggestion!', 'success');

                    // Close the lid after a delay
                    setTimeout(() => {
                        binLid.classList.remove('bin-lid-open');

                        // Hide the bin after animation completes
                        setTimeout(() => {
                            trashContainer.classList.remove('visible');
                            submitBtn.disabled = false;
                        }, 1000);
                    }, 500);
                }
            }
        });
    </script>
</body>
</html>
